#!/usr/bin/env bash

config_file=bin/environment.conf
function getProperty {
   property_key=$1
   property_value=$(< $config_file grep "$property_key" | cut -d'=' -f2 | xargs)
   echo "$property_value"
}

function log() {
  echo -e "$(date +"%Y-%m-%d %H:%M:%S")" "$1" "$2"
}

function debug() {
  log "DEBUG" "$1"
}

function info() {
  log "INFO" "$1"
}

function warning() {
  log "WARNING" "$1"
}

function error() {
  log "ERROR" "$1"
}

export -f debug
export -f info
export -f warning
export -f error